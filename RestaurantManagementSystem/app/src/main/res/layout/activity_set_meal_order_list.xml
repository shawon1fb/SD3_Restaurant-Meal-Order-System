<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetMealOrderList">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank's For Your Order"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/CustomSetMealColor"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:background="@color/white"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Ordered List"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@color/Forest_Green"
        android:textColor="@color/white"
        android:padding="15dp"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:padding="10dp"
                android:id="@+id/OrderList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textIsSelectable="true"
                />

            <TextView
                android:padding="15dp"
                android:id="@+id/TotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:background="@color/white"
                android:text="Total Amount : 0.00tk"
                android:textIsSelectable="true"

                />

        </LinearLayout>






    </ScrollView>

</LinearLayout>